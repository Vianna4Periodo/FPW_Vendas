<Window x:Class="Vendas.View.FAddEdtProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vendas.View"
        mc:Ignorable="d"
        Title="FAddEdtProduto" Height="338" Width="457">
    <Grid Margin="0,0,2,-2">
        <Label Content="Descrição" HorizontalAlignment="Left" Margin="58,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDescricao" HorizontalAlignment="Left" Height="23" Margin="58,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202"/>
        <Label Content="Preço" HorizontalAlignment="Left" Margin="58,148,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPreco" HorizontalAlignment="Left" Height="23" Margin="58,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101"/>
        <Button x:Name="btnGravar" Content="Gravar" HorizontalAlignment="Left" Margin="239,251,0,0" VerticalAlignment="Top" Width="75" Click="btnGravar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="328,251,0,0" VerticalAlignment="Top" Width="75" Click="btnCancelar_Click"/>

    </Grid>
</Window>
